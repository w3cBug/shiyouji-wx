}


.menu {
  width: auto;
  height: auto;
  display: flex;
  flex-direction: row;
  
}
.menu-left {
  width: 187.5rpx ;
  background: #ECECEC;
  height: 980rpx;
  display: block;
}
.menu-right {
  background: #E2E2E2;
