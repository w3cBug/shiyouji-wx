/* pages/index1/data/data.wxss */
page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
/*  内容部分  */

.weui-tab__header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
  border: 1rpx solid #ccc;
  color: #3F9CCC;
}
.weui-tab__header1,.weui-tab__header2,.weui-tab__header3,.weui-tab__header4,.weui-tab__header5 {
  font-weight: 600;
  font-size: 18px;
  text-align: center;
}
.weui-tab__header1 {
  width: 15%;
}
.weui-tab__header2 {
  width: 30%;
}
.weui-tab__header3 {
  width: 15%;
}
.weui-tab__header4 {
  width: 25%;
}
.weui-tab__header5 {
  width: 25%;
}


/* body  */
.weui-tab__body {
  height:850rpx;
}
.body-item {
  display: flex;
  flex-direction:column;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-bottom: 1rpx solid #ccc;
  margin-bottom: 20rpx;
  font-size: 15px;
}
.body-item-top {
  height: 30rpx;
  line-height: 30rpx;
  display: flex;
  flex-direction: row;
  padding-top: 5rpx;
}
.body-item-top2 {
  color:  red;
  height: 30rpx;
  line-height: 30rpx;
  display: flex;
  flex-direction: row;
  padding-top: 5rpx;
}
.item-top1{
  width: 15%;
}
.item-top2 {
  width: 25%;
}
.item-top3 {
  width: 10%;
}
.item-top4 {
  width: 30%;
}
.item-top5 {
  width: 30%;
}
.body-item-bottom {
  height: 120rpx;
  line-height: 120rpx;
  font-size: 13px;
  text-align: left;
  padding-right: 30rpx;
  padding-left: 5rpx;
}



/* footer  */
.weui-tab__footer {
  height: 180rpx;
  border: 1rpx solid black;
  display: flex;
  flex-direction: column;
  text-align:center;
  line-height: 180rpx;
  background: #A5D9FE;
}
.footer-item {
  display: flex;
  flex-direction:column;
  height: 180rpx;
  text-align: center;
  line-height: 180rpx;
  font-size: 18px;
}
.foot-item-top{
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  flex-direction: row;
}

.footer-item-top1 {
  width: 50%;
}
.footer-item-top2 {
  width: 50%;
}
