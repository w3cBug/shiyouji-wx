/* pages/shop/table/table.wxss */
.table-page {
  width: 100%;
  height: 1080rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.table-boby {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 160rpx;
  font-size: 32rpx;
  font-weight: 600;
}
.table-boby input {
  border: 1rpx solid #ccc;
  margin-left: 30rpx;
}
.table-btn {
  height: 120rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.table-btn button {
  width: 30%;
  margin: 0;
  padding: 0;
  background: #13D1BE;
}
.icons {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 250rpx;
  width: 100%;
}
.button-hover {
  background-color: red;
  opacity: 0.7;
}